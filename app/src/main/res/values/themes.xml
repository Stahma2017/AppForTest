<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppForTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorAccent">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/festival</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetStyle">@style/ModalBottomSheetStyle</item>
        <!--<item name="bottomSheetDialogTheme">@style/ModalBottomSheetStyle</item>-->
    </style>

    <style name="BottomSheetDialogOverlay" parent="Widget.Design.BottomSheet.Modal"/>

    <style name="ModalBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="backgroundTint">@color/main_gray2</item>
        <item name="android:backgroundTint">@color/main_gray2</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>




</resources>